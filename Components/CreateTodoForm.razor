@using StateManagementWithFluxor.Models.Todos.Validation

<h3 class="text-center">Create a Todo</h3>

<EditForm Model="validationModel" class="form-group">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row justify-content-around">
        <InputText id="create-todo-title" @bind-Value="validationModel.Title" class="form-control"/>
        <InputCheckbox id="create-todo-completed" @bind-Value="validationModel.Completed" class="form-check-input"/>
        <InputNumber id="create-todo-user-id" @bind-Value="validationModel.UserId" class="form-control"/>
    </div>

    <div class="d-flex flex-row justify-content-center">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</EditForm>


